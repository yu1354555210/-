.top-img{
	width: 100%;
	height: 420rpx;
	position: relative;
	overflow: hidden;
}
.top-img text{
	position: absolute;
	left: 0;
	bottom: 0;
	height: 80rpx;
	line-height: 80rpx;
	box-sizing: border-box;
	padding-left: 40rpx;
	font-size: 28rpx;
	color: #fff;
	width: 100%;
	background-color: rgba(0, 0, 0, .3);
}
.recommend-title{
	height: 38rpx;
	line-height: 38rpx;
	padding: 18rpx 0 30rpx;
	border-bottom: 2rpx solid #f0f0f0;
	overflow: hidden;
}
.recommend-title span{
	display: inline-block;
	text-align: center;
	color: #fff;
	width: 160rpx;
	background-color: #df4948;
	font-size: 22rpx;
	border-radius: 0 19rpx 19rpx 0;
}
.recommend-title text{
	font-size: 20rpx;
	color: #b0b0b0;
	margin-left: 20rpx;
}

.news-list{
	padding: 0 38rpx;
	overflow: hidden;
}
.news-item{
	padding: 38rpx 0;
	border-bottom: 2rpx solid #ebebeb;
}
.news-list .news-title{
	font-size: 30rpx;
	color: #313036;
	font-weight: bold;
}
.news-list .news-summary{
	font-size: 24rpx;
	line-height: 40rpx;
	color: #787878;
	padding: 20rpx 0;
}

.news-list .news-img{
	display: flex;
	justify-content: space-between;
}
.news-list .news-img image{
	width: 215rpx;
	height: 150rpx;
}