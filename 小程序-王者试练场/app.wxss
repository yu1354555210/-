@import "fonticon.wxss";

page{
	background: #ededf2;
}
image{
	max-width: 100%;
	width: 100%;
	height: 100%;
	object-fit: cover;
}
/**
     * 标准按钮
 */
.this-btn {
  min-width: 110rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 43rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  border-radius: 5rpx;
}
.this-btn.weixin-btn {
  background-color: #09bb07;
}
.this-btn.qq-btn,
.this-btn.mine-btn {
  background-color: #0b91ff;
}

/**
     * 大按钮
 */
.this-big-btn {
  width: 182rpx;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  background-color: #e5e5e5;
  font-size: 22rpx;
  margin: 0;
  padding: 0;
  color: #666666;
  border: 0;
  outline: none;
  border-radius: 6rpx;
}
/**
     * 长按钮
 */
.this-long-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 105rpx;
  line-height: 105rpx;
  color: #fff;
  background-color: #ff9c00;
  font-size: 34rpx;
  border: none;
  text-align: center;
  outline: none;
  border-radius: 0;
}
.this-long-btn:active {
  background-color: #ea9416;
}
.this-long-btn.this-static-btn {
  position: static;
}
/**
     * 底部悬浮支付
 */
.footer-nav-pay {
  box-shadow: 0 0 1rpx rgba(0, 0, 0, 0.2);
  position: fixed;
  background-color: #fff;
  z-index: 66;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 125rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}
.footer-nav-pay .total-money {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  padding-left: 24rpx;
  font-size: 42rpx;
  color: #333333;
}
.footer-nav-pay .total-money span {
  color: #ff0000;
}
.footer-nav-pay .pay-btn {
  flex: 0 0 248rpx;
  -webkit-flex: 0 0 248rpx;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
  background-color: #ff0000;
  height: 100%;
}
.footer-nav-pay .pay-btn navigator {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
  height: 100%;
  color: #fff;
}

.footer-nav-pay.footer-nav-static {
  position: static;
}